.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  z-index: 10;
}

.back-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-btn image {
  width: 44rpx;
  height: 44rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.share-btn {
  width: 88rpx;
  height: 88rpx;
  padding: 0;
  margin: 0;
  background: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.share-btn image {
  width: 44rpx;
  height: 44rpx;
}

.content {
  padding: 108rpx 30rpx 40rpx;
}

.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
}

.value {
  font-size: 28rpx;
  color: #333;
}

.score {
  display: flex;
}

.score-star {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.chat-list {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.chat-item {
  display: flex;
  margin-bottom: 30rpx;
}

.chat-item:last-child {
  margin-bottom: 0;
}

.chat-item.robot {
  flex-direction: row;
}

.chat-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  margin: 0 20rpx;
}

.message-box {
  max-width: 70%;
}

.nickname {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.message-content {
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.robot .message-content {
  background: #fff;
  border: 2rpx solid #eee;
  color: #333;
}

.user .message-content {
  background: #1890ff;
  color: #fff;
}

.time {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 28rpx;
  color: #999;
} 