.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
}

.history-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.robot-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.robot-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.history-time {
  font-size: 24rpx;
  color: #999;
  margin-left: auto;
}

.history-content {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.question,
.answer {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.question::before {
  content: 'Q: ';
  color: #1296db;
  font-weight: bold;
}

.answer::before {
  content: 'A: ';
  color: #52c41a;
  font-weight: bold;
}

.history-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.score {
  color: #1296db;
}

.points {
  color: #52c41a;
}

.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 