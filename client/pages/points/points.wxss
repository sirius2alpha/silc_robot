.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.balance-box {
  display: flex;
  flex-direction: column;
}

.balance-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.balance-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.exchange-btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  background: #1296db;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
}

.records-box {
  background: #fff;
  padding: 30rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.record-info {
  flex: 1;
  margin-right: 20rpx;
}

.record-desc {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-points {
  font-size: 32rpx;
  font-weight: bold;
}

.record-points.plus {
  color: #52c41a;
}

.record-points.minus {
  color: #f5222d;
}

.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.balance-card {
  position: relative;
  background: linear-gradient(135deg, #1890ff, #36cfc9);
  padding: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
}

.balance-title {
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.balance-amount {
  font-size: 60rpx;
  font-weight: bold;
}

.rules-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.rules-btn image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.tab-bar {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #1890ff;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1890ff;
  border-radius: 2rpx;
}

.points-list {
  background: #fff;
  padding: 0 30rpx;
}

.points-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.points-info {
  flex: 1;
  margin-right: 20rpx;
}

.points-desc {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.points-time {
  font-size: 24rpx;
  color: #999;
}

.points-amount {
  font-size: 32rpx;
  font-weight: bold;
}

.points-amount.plus {
  color: #52c41a;
}

.points-amount.minus {
  color: #ff4d4f;
}

.exchange-list {
  padding: 0 30rpx;
}

.exchange-item {
  display: flex;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.item-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-right: 30rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.item-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  flex: 1;
}

.item-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-points {
  font-size: 28rpx;
  color: #ff4d4f;
  font-weight: bold;
}

.exchange-btn {
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #1890ff;
  color: #fff;
  font-size: 26rpx;
  border-radius: 30rpx;
  padding: 0;
}

.exchange-btn.disabled {
  background: #ccc;
}

.loading-status,
.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-status image,
.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.rules-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.rules-popup.show {
  visibility: visible;
  opacity: 1;
}

.rules-content {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
}

.rules-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.rules-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 40rpx;
  height: 40rpx;
  padding: 20rpx;
  margin: -20rpx;
}

.rules-body {
  max-height: 800rpx;
  overflow-y: auto;
}

.rule-item {
  margin-bottom: 30rpx;
}

.rule-title {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.rule-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
} 