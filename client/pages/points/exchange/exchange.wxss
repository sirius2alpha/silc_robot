.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.gift-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.gift-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
}

.gift-image {
  width: 200rpx;
  height: 200rpx;
  flex-shrink: 0;
}

.gift-info {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.gift-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.gift-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
  flex: 1;
}

.gift-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.gift-points {
  font-size: 28rpx;
  color: #f5222d;
  font-weight: bold;
}

.exchange-btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
  background: #1296db;
  color: #fff;
  padding: 0;
}

.exchange-btn.disabled {
  background: #ccc;
}

.loading,
.empty {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 