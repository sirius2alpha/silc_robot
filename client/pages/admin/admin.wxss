.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.content {
  padding: 20rpx;
}

/* 用户列表样式 */
.user-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.user-phone {
  font-size: 24rpx;
  color: #999;
}

.user-stats {
  text-align: right;
}

.stat-item {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 6rpx;
}

/* 对话记录样式 */
.chat-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.chat-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.chat-user {
  font-size: 28rpx;
  color: #333;
}

.chat-time {
  font-size: 24rpx;
  color: #999;
}

.chat-content {
  background: #f5f5f5;
  padding: 20rpx;
  border-radius: 8rpx;
  margin: 10rpx 0;
}

.chat-question,
.chat-answer {
  display: block;
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.chat-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 知识库管理样式 */
.knowledge {
  text-align: center;
  padding: 60rpx 30rpx;
}

.upload-btn {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
}

.upload-tip {
  font-size: 24rpx;
  color: #999;
}

/* 通用样式 */
.loading,
.no-more,
.empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
} 