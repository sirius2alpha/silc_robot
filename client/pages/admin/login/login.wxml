<view class="container">
  <view class="login-box">
    <view class="title">管理员登录</view>
    
    <view class="form-item">
      <input 
        class="input"
        type="text"
        placeholder="请输入用户名"
        value="{{username}}"
        data-field="username"
        bindinput="handleInput"
      />
    </view>

    <view class="form-item">
      <input 
        class="input"
        type="password"
        placeholder="请输入密码"
        value="{{password}}"
        data-field="password"
        bindinput="handleInput"
      />
    </view>

    <button 
      class="login-btn"
      loading="{{loading}}"
      bindtap="handleLogin"
    >
      登录
    </button>

    <view class="tips">
      <text>* 仅限系统管理员登录使用</text>
    </view>
  </view>
</view> 