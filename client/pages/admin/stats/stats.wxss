.container {
  min-height: 100vh;
  background: #f8f8f8;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 1;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.filter-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.range-picker,
.date-picker {
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.arrow {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.date-separator {
  margin: 0 20rpx;
  color: #999;
}

.export-btn {
  margin-left: auto;
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #1296db;
  background: #fff;
  border: 2rpx solid #1296db;
  border-radius: 32rpx;
}

.stats-content {
  padding: 20rpx;
}

.stats-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.card-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.grid-item {
  text-align: center;
}

.item-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #1296db;
  margin-bottom: 10rpx;
}

.item-label {
  font-size: 24rpx;
  color: #999;
}

.loading {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
}

/* 图表相关 */
.trend-chart,
.pie-chart,
.bar-chart {
  width: 100%;
  margin: 20rpx 0;
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 20rpx;
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
}

/* 列表相关 */
.list-content {
  max-height: 600rpx;
  overflow-y: auto;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.list-item:last-child {
  border-bottom: none;
}

.item-rank {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #f5f5f5;
  border-radius: 30rpx;
  margin-right: 20rpx;
  color: #666;
  font-size: 28rpx;
}

.item-main {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.item-title {
  font-size: 28rpx;
  color: #333;
}

.item-count {
  font-size: 24rpx;
  color: #999;
}

/* 性能列表 */
.performance-list {
  margin-top: 20rpx;
}

.performance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.performance-item:last-child {
  border-bottom: none;
}

/* 评价反馈 */
.feedback-list {
  max-height: 800rpx;
  overflow-y: auto;
}

.feedback-item {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.feedback-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.feedback-score {
  font-size: 32rpx;
}

.feedback-time {
  font-size: 24rpx;
  color: #999;
}

.feedback-content {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.feedback-question {
  font-size: 24rpx;
  color: #666;
}

/* 积分排行 */
.rank-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.rank-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.rank-item:last-child {
  border-bottom: none;
}

.rank-index {
  width: 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
}

.rank-index:nth-child(1) {
  color: #f5c51d;
}

.rank-index:nth-child(2) {
  color: #c0c0c0;
}

.rank-index:nth-child(3) {
  color: #cd7f32;
}

.rank-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.rank-info {
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rank-name {
  font-size: 28rpx;
  color: #333;
}

.rank-points {
  font-size: 28rpx;
  color: #1296db;
  font-weight: bold;
}

/* 积分使用分布 */
.points-usage {
  position: relative;
}

.usage-legend {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx;
}

.legend-value {
  margin-left: 20rpx;
  color: #1296db;
  font-weight: bold;
} 