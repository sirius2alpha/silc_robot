.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  background: #fff;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
}

.back {
  padding: 20rpx;
  margin-left: -20rpx;
}

.back image {
  width: 40rpx;
  height: 40rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 60rpx;
}

.filter-section {
  background: #fff;
  padding: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.search-box {
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  margin-bottom: 20rpx;
}

.search-input {
  font-size: 28rpx;
  width: 100%;
}

.filter-box {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.picker {
  flex: 1;
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.arrow {
  width: 32rpx;
  height: 32rpx;
}

.stats-section {
  background: #fff;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.stat-item {
  text-align: center;
}

.stat-item .value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #666;
}

.query-list {
  height: calc(100vh - 400rpx);
  padding: 20rpx;
}

.query-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.query-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.query-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  line-height: 1.5;
  margin-right: 20rpx;
}

.accuracy {
  font-size: 32rpx;
  font-weight: bold;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
}

.accuracy.high {
  background: #e8f7f2;
  color: #07c160;
}

.accuracy.medium {
  background: #e6f4ff;
  color: #1890ff;
}

.accuracy.low {
  background: #fff2f0;
  color: #fa5151;
}

.answer-preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.query-meta {
  display: flex;
  align-items: center;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.user {
  color: #1890ff;
}

.score {
  color: #ffa940;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 28rpx;
  color: #999;
} 