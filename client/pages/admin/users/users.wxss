.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: #fff;
  padding: 20rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-box {
  background: #f5f5f5;
  border-radius: 32rpx;
  padding: 16rpx 32rpx;
}

.search-input {
  font-size: 28rpx;
  width: 100%;
}

.user-list {
  padding: 20rpx;
}

.user-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-detail {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.phone {
  font-size: 24rpx;
  color: #999;
}

.user-stats {
  display: flex;
  margin: 0 30rpx;
}

.stat-item {
  text-align: center;
  margin: 0 20rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.stat-item .value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.status {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
}

.status.active {
  background: #e8f7f2;
  color: #07c160;
}

.status.inactive {
  background: #fef0f0;
  color: #fa5151;
}

.load-more {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 28rpx;
}

.empty {
  padding: 120rpx 0;
  text-align: center;
}

.empty image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty text {
  font-size: 28rpx;
  color: #999;
} 