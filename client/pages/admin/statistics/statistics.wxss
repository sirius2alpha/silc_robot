.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: #fff;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  flex: 1;
}

.filter-bar {
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}

.date-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.date-picker .arrow {
  width: 32rpx;
  height: 32rpx;
}

.stats-card, .chart-card {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  padding: 30rpx;
}

.card-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 24rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.stat-item {
  background: #f8f8f8;
  padding: 24rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
}

.stat-item .value {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.trend {
  font-size: 24rpx;
}

.trend.up {
  color: #07c160;
}

.trend.down {
  color: #fa5151;
}

.chart-container {
  height: 400rpx;
  width: 100%;
}

.knowledge-stats {
  margin-top: 20rpx;
}

.knowledge-item {
  margin-bottom: 24rpx;
}

.knowledge-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.knowledge-info .name {
  font-size: 28rpx;
  color: #333;
}

.knowledge-info .count {
  font-size: 24rpx;
  color: #999;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.progress-bar .progress {
  height: 100%;
  background: #1890ff;
  border-radius: 4rpx;
}

.accuracy {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.accuracy .value {
  color: #07c160;
  font-weight: bold;
}

.rating-stats {
  margin-top: 20rpx;
}

.rating-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.rating-item .stars {
  width: 100rpx;
  font-size: 24rpx;
  color: #666;
}

.rating-item .progress-bar {
  flex: 1;
  margin: 0 20rpx;
  margin-bottom: 0;
}

.rating-item .progress-bar .progress {
  background: #ffa940;
}

.rating-item .count {
  font-size: 24rpx;
  color: #999;
  width: 80rpx;
  text-align: right;
}

.performance-stats {
  margin-top: 20rpx;
}

.performance-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.performance-item:last-child {
  border-bottom: none;
}

.performance-item .label {
  font-size: 28rpx;
  color: #666;
}

.performance-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.loading {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 28rpx;
  color: #999;
} 