.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: #f5f5f5;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.robot-list {
  margin-bottom: 60rpx;
}

.robot-card {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.robot-card.selected {
  background: #e6f7ff;
  border: 2rpx solid #1890ff;
}

.robot-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.robot-info {
  flex: 1;
}

.robot-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.robot-desc {
  font-size: 26rpx;
  color: #666;
}

.select-icon {
  width: 40rpx;
  height: 40rpx;
}

.select-icon image {
  width: 100%;
  height: 100%;
}

.bind-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 45rpx;
  font-size: 32rpx;
  text-align: center;
}

.bind-btn[disabled] {
  background: #ccc;
  color: #fff;
} 