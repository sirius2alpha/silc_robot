.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding: 20rpx;
}

.config-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
}

.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.robot-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.robot-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.config-list {
  margin-bottom: 40rpx;
}

.config-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.item-label {
  flex: 1;
  margin-right: 20rpx;
}

.label-text {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.label-desc {
  font-size: 24rpx;
  color: #999;
}

.input-number {
  width: 120rpx;
  height: 60rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
  padding: 10rpx 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.save-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
}

.loading {
  text-align: center;
  padding: 60rpx 30rpx;
  color: #999;
  font-size: 28rpx;
} 