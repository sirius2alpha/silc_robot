.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.message-list {
  flex: 1;
  padding: 20rpx 0;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
}

.message-item.robot {
  flex-direction: row;
}

.message-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.message-content {
  max-width: 60%;
  padding: 20rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.robot .message-content {
  background: #fff;
  color: #333;
}

.user .message-content {
  background: #1296db;
  color: #fff;
}

.time {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.evaluate-box {
  text-align: center;
  margin: 30rpx 0;
}

.evaluate-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.evaluate-btns {
  display: flex;
  justify-content: center;
  gap: 20rpx;
}

.evaluate-btn {
  min-width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  border-radius: 32rpx;
}

.evaluate-btn.negative {
  background: #f5f5f5;
  color: #666;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.loading image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.loading text {
  font-size: 24rpx;
  color: #999;
}

.input-area {
  background: #fff;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}

.input-box {
  display: flex;
  align-items: center;
}

.voice-btn {
  width: 60rpx;
  height: 60rpx;
  padding: 0 20rpx;
}

.input {
  flex: 1;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.voice-input {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  text-align: center;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.voice-input-hover {
  background: #e6e6e6;
}

.send-btn {
  width: 120rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  padding: 0;
}

.send-btn[disabled] {
  background: #ccc;
}

.message-image {
  max-width: 100%;
  border-radius: 8rpx;
}

.tool-bar {
  display: flex;
  align-items: center;
  margin-right: 20rpx;
}

.tool-btn {
  width: 80rpx;
  height: 80rpx;
  padding: 0;
  margin: 0;
  background: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tool-btn::after {
  border: none;
}

.tool-icon {
  width: 44rpx;
  height: 44rpx;
}

.upload-progress {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 4rpx;
  background: #1296db;
  transition: width 0.3s;
}

.message-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
}

.share-btn {
  width: 48rpx;
  height: 48rpx;
  padding: 0;
  margin: 0;
  background: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn::after {
  border: none;
}

.share-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}

.share-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 100;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s;
}

.share-mask.show {
  visibility: visible;
  opacity: 1;
}

.share-menu {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.share-mask.show .share-menu {
  transform: translateY(0);
}

.share-title {
  text-align: center;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.share-options {
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.share-option {
  background: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.share-option::after {
  border: none;
}

.option-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 16rpx;
}

.share-option text {
  font-size: 28rpx;
  color: #333;
}

.share-cancel {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  color: #333;
  font-size: 32rpx;
  border-radius: 44rpx;
} 